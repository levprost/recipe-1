{% extends 'base.html.twig' %}

{% block title %} Rubrik {% endblock %}

{% block body %}
<div class="container-fluid">
<div class="row">
                    
        <div class="col-md-1">
            
        </div>
        <div class="col-md-10">
              <h1 class="my-5">{{rubrik.name|capitalize}}</h1>

            <div class="row text-center" style="justify-content:space-around;">
                    {% for posts in posts %}
                    <div class="card border-success border-3 d-grid my-3" style="width: 18rem;">
                        <img src="{{asset('divers/images/' ~ posts.image)}}" alt="Mon image" class="card-img-top" alt="Product Image">
                        <div class="card-body d-grid">
                          <h5 class="card-title">{{posts.title}}</h5>
                          <p class="card-text"><a class="" href="{{path('show', {id: posts.id})}}">{{posts.abstract|slice(0, 100)}}...</a></p>
                          <div class="align-self-end">
                            <a href="{{path('show', {id: posts.id})}}" class="btn btn-success">Voir la recette</a>
                          </div>
                        </div>
                      </div>
                    {% endfor %}

            </div>
        </div>
        <div class="col-md-1">
            
        </div>
  </div>    
</div>
{% endblock %}